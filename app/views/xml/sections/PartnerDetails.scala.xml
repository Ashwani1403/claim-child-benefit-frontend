
@import views.xml.xml.sections._

@this(line: Line)

@(model: JourneyModel.Partner)(implicit messages: Messages)


<fo:block-container margin-bottom="1cm" keep-together="always">

    <fo:block font-size="18pt" font-weight="bold" margin-bottom="0.5cm">@messages("pdf.partnerDetails")</fo:block>

    @line("pdf.name", model.name.display)

    @line("pdf.nino", model.nationalInsuranceNumber.getOrElse(messages("pdf.notKnown")))

    @line("pdf.dateOfBirth", date(model.dateOfBirth))

    @line("pdf.nationality", model.nationality)

    @line("pdf.employmentStatus", model.employmentStatus.map(x => messages(s"partnerEmploymentStatus.${x.toString}")).mkString(", "))

    @line(
        "pdf.entitledOrWaitingToHear",
        model.waitingToHearAboutEntitlement.getOrElse(model.currentlyEntitledToChildBenefit) match {
            case true => messages("site.yes")
            case false => messages("site.no")
        }
    )

    @model.eldestChild.map { child =>
        @line("pdf.eldestChildName", child.name.fullName),
        @line("pdf.eldestChildDateOfBirth", date(child.dateOfBirth))
    }

</fo:block-container>
